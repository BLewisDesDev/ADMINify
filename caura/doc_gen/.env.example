# Document Generator Configuration

# Microsoft Graph API Settings
MICROSOFT_TENANT_ID=your_tenant_id_here
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here

# SharePoint Configuration
SHAREPOINT_SITE_URL=https://yourorg.sharepoint.com/sites/caura
SHAREPOINT_DOC_LIBRARY=Shared Documents
SHAREPOINT_CLIENT_FOLDER=ClientDocuments

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=openai  # or 'anthropic'
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3

# Document Generation Settings
DEFAULT_TEMPLATE_VERSION=v1.0.0
ENABLE_LLM_GENERATION=true
ENABLE_SHAREPOINT_UPLOAD=true
ENABLE_PII_OBFUSCATION=true

# Security Settings
ENCRYPTION_KEY=your_32_byte_encryption_key_here
SESSION_TIMEOUT_MINUTES=30
AUDIT_LOG_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/doc_gen.log
ENABLE_CONSOLE_LOGGING=true

# Development Settings
DEVELOPMENT_MODE=false
TEST_DATA_PATH=tests/test_data/
MOCK_SHAREPOINT=false
MOCK_LLM=false